{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "declaration": true,
    "rootDir": "src", // this was the original setting, needed for npm publish
    // "rootDir": "./", // needed to run dev , testing with the examples
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "example",
    "src/**/*.spec.ts",
    "aot"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": false
  }
}